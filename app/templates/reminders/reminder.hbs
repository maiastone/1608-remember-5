<div>

  {{#if isEditing}}

  <h2>Title{{input type='text' class='spec-edit-title' value=model.title}}</h2>
  <h3>Notes{{textarea class='spec-edit-notes' value=model.notes}}</h3>
  <h3>Date{{input type='date' class='spec-edit-date' value=model.date}}</h3>
  <button class='save' {{action 'saveReminder' model on 'submit'}}>Save</button>

  {{else}}

    <h1 class='spec-reminder-title'>{{model.title}}</h1>
    {{#if model.notes}}
      <p class='spec-reminder-note'>{{model.notes}}</p>
    {{/if}}
    <p class='spec-reminder-date'>{{model.date}} </p>
    <button class='edit' {{action 'editReminder'}}>Edit</button>

  {{/if}}

</div>
