<section>
  <ul>
    {{#each model as |reminder|}}
    <li>

      {{#link-to 'reminders.reminder' reminder}}
        <button class='spec-reminder-item'>{{reminder.title}}</button>
      {{/link-to}}

      <p class='spec-reminder-note'>{{reminder.notes}}</p>
      <p class='spec-reminder-date'>{{reminder.date}}</p>

      {{#if reminder.hasDirtyAttributes}}
        <p class='unsaved'>There are unsaved changes.</p>
      {{/if}}

      <button>
        {{#link-to 'reminders.edit' reminder class='edit'}}A
          Edit Reminder
        {{/link-to}}
      </button>

      <button class='delete' {{action 'delete' reminder}}>
        Delete Reminder
      </button>

    </li>
    {{/each}}
  </ul>
</section>

{{outlet}}
